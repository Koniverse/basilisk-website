mixin footer
    - var linksSize = footerLinks.length

    footer.footer
        .footer__inner.d-none.d-xl-flex
            img.footer-icon(src=url('images/left-footer-icon.svg'))
            ul.footer__menu.footer__menu-right
                each link in footerLinks
                    a.footer__menu-item.btn.btn__sm(href=link.url target=link.target)=link.test
            img.footer-icon(src=url('images/right-footer-icon.png'))



