extends ../_layouts/main

block prepend head
    - var title = siteDescription

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    .container.px-3
        .header-background
        .section-1
            .text-center
                img.basilisk(src=url('/images/basilisk.png'))

            h1.headline-1 Liquidity protocol built on Kusama
            h4.sub-headline-1 Swap, Bootstrap & Provide Liquidity

            .row.section-1-info-box.gx-0
                img(src=url('images/Logo-neon-dark-green-2.png'))
        .section-2
